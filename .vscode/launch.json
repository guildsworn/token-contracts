    "version": "0.2.0",
    "configurations": [
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat deploy",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "deploy", "--write", "true", "--reset"],
            "cwd": "${workspaceFolder}"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat deploy oasis_sapphire_testnet",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "deploy", "--network", "oasis_sapphire_testnet", "--write", "true"],
            "cwd": "${workspaceFolder}"
          },          
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat test",
            "skipFiles": [""],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "test", "${file}"],
            "cwd": "${workspaceFolder}"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat run script",
            "skipFiles": [""],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "run", "${file}", "--network", "oasis_sapphire_testnet"],
            "cwd": "${workspaceFolder}"
          }
    ]
}
