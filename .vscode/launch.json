    "version": "0.2.0",
    "configurations": [
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat generate interfaces",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npx",
            "args": ["hardhat","generateInterfaces"],
            "cwd": "${workspaceFolder}"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat deploy",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "deploy", "--write", "true", "--export", "eldfallnetworks.json", "--reset"],
            "cwd": "${workspaceFolder}"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat deploy testnet",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "deploy", "--network", "testnet", "--write", "true", "--export", "eldfallnetworks.json"],
            "cwd": "${workspaceFolder}"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat deploy test data",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "deploy", "--tags", "stage3"],
            "cwd": "${workspaceFolder}"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "hardhat test",
            "skipFiles": [""],
            "runtimeExecutable": "npx",
            "args": ["hardhat", "test", "${file}"],
            "cwd": "${workspaceFolder}"
          }
    ]
}
